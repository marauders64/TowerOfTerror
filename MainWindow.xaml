<Window x:Class="TowerOfTerror.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TowerOfTerror"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Canvas x:Name="TitleScreen">
        <Image Height="88">
            <Image.Source>
                <BitmapImage UriSource="/Graphics/title.png"/>
            </Image.Source>
        </Image>
        <Button x:Name="btnStartGame" Content="Start Game" Background="AliceBlue" Click="btnStartGame_Click" Canvas.Left="157" Canvas.Top="155"/>
        <Button x:Name="btnLoadGame" Content="Load Game" IsEnabled="False" Click="btnLoadGame_Click" Canvas.Left="277" Canvas.Top="155"/>
        <Button x:Name="btnAbout" Content="About" Click="btnAbout_Click" Canvas.Left="225" Canvas.Top="212"/>
        <Button x:Name="btnHelp" Content="Help" Click="btnHelp_Click" Canvas.Left="101" Canvas.Top="212"/>
        <Button x:Name="btnHighScores" Content="High Scores" IsEnabled="False" Click="btnHighScores_Click" Canvas.Left="348" Canvas.Top="212"/>
        <Button x:Name="btnCheatMode" Content="     " Background="White" BorderBrush="White" Click="btnCheatMode_Click"  Canvas.Top="294" Canvas.Left="10"/>
    </Canvas>
</Window>
